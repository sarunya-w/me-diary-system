<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".diary.fragments.DrugFragment">

    <!--<TextView-->
        <!--android:id="@+id/txtapp3"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="57dp"-->
        <!--android:text="Drug"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="22sp" />-->

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_disease"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="โรคประจำตัว"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_view_disease"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="-" />

    <TextView
        android:id="@+id/text_drug_his"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ประวัติการแพ้ยา"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_view_drug_his"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="-" />

    <TextView
        android:id="@+id/text_drug_used"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ข้อมูลการใช้ยา"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_view_drug_used"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="-" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:backgroundTint="#ff1da1f2"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_done_white" />

</LinearLayout>
